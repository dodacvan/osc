<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
      layout="1column">
    <body>
        <referenceBlock name="secure-checkout-container">
            <block class="Magento\Framework\View\Element\Template" name="secure-checkout-one-column-top"
                   as="column.top"
                   template="Mageplaza_Osc::checkout-1column/top.phtml"
                    />
            <block class="Magento\Framework\View\Element\Template" name="secure-checkout-one-column-middle"
                   as="column.middle"
                   template="Mageplaza_Osc::checkout-1column/middle.phtml"
                    />
            <block class="Magento\Framework\View\Element\Template" name="secure-checkout-one-column-bottom"
                   as="column.bottom"
                   template="Mageplaza_Osc::checkout-1column/bottom.phtml"
                    />
        </referenceBlock>
    </body>
</page>